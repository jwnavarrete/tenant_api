{
  "compilerOptions": {
    "target": "es2020", // O una versi√≥n superior
    "module": "commonjs", 
    "typeRoots": ["api/@types", "node_modules/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "api/types/*"]
    }
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules"]
}
